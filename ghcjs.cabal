Name:           ghcjs
Version:        0.1.0
Description:    Haskell to JavaScript compiler
License:        MIT
License-file:   LICENSE
Author:         Victor Nazarov, Hamish Mackenzie, Luite Stegeman
Copyright:      Victor Nazarov, Hamish Mackenzie, Luite Stegeman
Maintainer:     Luite Stegeman <stegeman@gmail.com>
Stability:      Experimental
Build-Type:     Custom
Cabal-Version:  >= 1.10
data-dir:       .
data-files:     include/*.h
                include/prim/*.hs-incl
                include/prim/*.txt

source-repository head
  type:     git
  location: https://github.com/ghcjs/ghcjs.git

flag boot
  default:            False

flag compiler-only
  default:            False

flag disable-optimizer
  default:            False

Library
    if flag(disable-optimizer)
      cpp-options: -DDISABLE_OPTIMIZER
    Default-Language: Haskell2010
    exposed-modules: Gen2.Generator,
                     Gen2.Floater,
                     Gen2.Prim,
                     Gen2.Rts,
                     Gen2.RtsApply,
                     Gen2.RtsPrim,
                     Gen2.RtsTypes,
                     Gen2.RtsAlloc,
                     Gen2.RtsSettings,
                     Gen2.Utils,
                     Gen2.StgAst,
                     Gen2.Optimizer,
                     Gen2.Dataflow,
                     Gen2.Debug,
                     Gen2.GC,
                     Gen2.Printer,
                     Gen2.Linker,
                     Gen2.Shim,
                     Gen2.PrimIface,
                     Gen2.Compactor,
                     Gen2.Object,
                     Gen2.ClosureInfo,
                     Gen2.Foreign,
                     Gen2.Sinker,
                     Gen2.DynamicLinking,
                     Gen2.GHC.CoreToStg,
                     Gen2.GHC.Linker,
                     Gen2.GHC.SysTools,
                     Compiler.GhcjsHooks,
                     Compiler.GhcjsPlatform,
                     Compiler.Info,
                     Compiler.Settings,
                     Compiler.Utils,
                     Compiler.Variants,
                     GHCJS
    other-modules: Paths_ghcjs
    build-depends: base           >= 4        && < 5,
                   Cabal,
                   ghc            >= 7.7    && < 7.10,
                   directory,
                   filepath,
                   containers,
                   process,
                   mtl,
                   ghc-paths,
                   template-haskell,
                   syb            >= 0.4      && < 0.5,
                   bytestring     >= 0.10     && < 0.11,
                   attoparsec     >= 0.11     && < 0.12,
                   aeson          >= 0.7      && < 0.8,
                   jmacro         >= 0.7      && < 0.8,
                   text           >= 0.11     && < 1.2,
                   wl-pprint-text >= 1.1      && < 1.2,
                   lens           >= 4.0      && < 4.1,
                   parsec         >= 3.1      && < 3.2,
                   yaml           >= 0.8      && < 0.9,
                   shelly         >= 1.4      && < 1.5,
                   time,
                   system-filepath,
                   transformers,
                   split          >= 0.2      && < 0.3,
                   deepseq,
                   vector         >= 0.10     && < 0.11,
                   data-default   >= 0.5      && < 0.6,
                   array          >= 0.4      && < 0.6,
                   binary         >= 0.7      && < 0.8,
                   text-binary    >= 0.1      && < 0.2,
                   unordered-containers >= 0.2 && < 0.3,
                   cryptohash     >= 0.11     && < 0.12,
                   base16-bytestring >= 0.1   && < 0.2,
                   parallel       >= 3.2      && < 3.3,
                   hashable,
                   unordered-containers
    exposed: True
    buildable: True
    hs-source-dirs: src
    include-dirs: include
    GHC-Options:    -O -fno-warn-orphans -auto-all

Executable ghcjs
    Main-Is:        Main.hs
    Default-Language: Haskell2010
    hs-source-dirs: src-bin
    Build-Depends:  base                >= 4    &&  < 5,
                    containers,
                    ghcjs,
                    ghc,
                    text                >= 0.11 && < 1.2,
                    ghc-paths,
                    process,
                    directory,
                    filepath,
                    bytestring          >= 0.10  && < 0.11,
                    Cabal,
                    optparse-applicative >= 0.7 && < 0.8
    GHC-Options:    -O -fno-warn-orphans -rtsopts -with-rtsopts=-K256m -with-rtsopts=-N -auto-all -threaded

Executable ghcjs-pkg
    if flag(compiler-only)
      Buildable:      False
    Main-Is:          Pkg.hs
    Default-Language: Haskell2010
    Hs-Source-Dirs:   src-bin
    Build-Depends:    ghcjs,
                      base       >= 4   && < 5,
                      directory  >= 1   && < 1.3,
                      process    >= 1   && < 1.3,
                      filepath,
                      Cabal,
                      binary,
                      bin-package-db,
                      bytestring
    if !os(windows)
        Build-Depends: unix,
                       terminfo
    if os(windows)
        c-sources: cbits/CRT_noglob.c

Executable ghcjs-boot
    if flag(compiler-only)
      Buildable:      False
    Main-Is:          Boot.hs
    Default-Language: Haskell2010
    Hs-Source-Dirs:   src-bin
    Build-Depends:    base                 >= 4    && < 5,
                      ghcjs,
                      directory,
                      network,
                      Cabal,
                      ghc,
                      ghc-paths,
                      text                 >= 0.11 && < 1.2,
                      bytestring           >= 0.10 && < 0.11,
                      system-filepath      >= 0.4  && < 0.5,
                      shelly               >= 1.4  && < 1.5,
                      system-fileio        >= 0.3  && < 0.4,
                      optparse-applicative >= 0.7  && < 0.8

test-suite test
    type:             exitcode-stdio-1.0
    Default-Language: Haskell2010
    hs-source-dirs:   test
    ghc-options: -threaded -O
    main-is:          TestRunner.hs
    build-depends:    base                 >= 4 && < 5,
                      process,
                      test-framework       >= 0.8,
                      test-framework-hunit >= 0.3,
                      HUnit                >= 1.2 && < 1.3,
                      system-filepath      >= 0.4 && < 0.5,
                      system-fileio        >= 0.3 && < 0.4,
                      text,
                      transformers,
                      random,
                      time,
                      bytestring,
                      deepseq,
                      shelly               >= 1.4 &&  < 1.5,
                      data-default         >= 0.5 &&  < 0.6,
                      yaml                 >= 0.8 &&  < 0.9

